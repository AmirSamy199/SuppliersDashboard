
@{
    Layout = null;
    int i = 1;

}
@using SuppliersDashboard.Controllers
@using SuppliersDashboard.ViewModels
@model Response<List<warehouse_Requst_V>>

<style>
    .modal-content {
        min-width: 200%
    }
</style>

<div class="container">

    <h3 class=" h3 text-center p-3 text-info ">
        طلبات استلام البضاعة
    </h3>
    <div class="row">
        <div class="col-6">

        </div>
        <div class="col-6">
            <button class="btn btn-primary w-100" onclick="addWarehouseRequestPartial()" >   طلب بضاعة اخري </button>
        </div>
    </div>

    @if (Model.Data != null && Model.Data.Count > 0)
    {
        <div>
            <table class="table table-striped  table-bordered">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            #
                        </th>
                        <th>
                            الصنف
                        </th>
                        <th>
                            العدد
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @try
                    {

                        foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>
                                    @(i++)
                                </td>
                                <td>
                                    @item.ItemName
                                </td>
                                <td>
                                    @item.Item_ID
                                </td>
                                <td>
                                    @item.Item_Count
                                </td>
                            </tr>
                        }
                    }
                    catch { }
                </tbody>
            </table>
        </div>


        <div class="row">
            <div class="col-12 p-3">
                <button class="btn btn-primary w-100 text-center" onclick="sure('هل انت متاكد من قبول طلب البضاعة ؟' , 'قبول' , 'salesmanacceptgetrequest()')" > فبول الاستلام </button>
            </div>
        </div>
        
   
    }
    else
    {
        <p class="text-center text-muted">
            لا يوجد
        </p>
    }
</div>