
@{
    Layout = null;
    int i = 1;

}
@using SuppliersDashboard.Controllers
@using SuppliersDashboard.ViewModels
@model Response<settlementViewModel>

<style>
    .modal-content {
        min-width: 200%
    }
    .row label{
        display : block;
    }
</style>

<div class="container">

    <h3 class=" h3 text-center p-3 text-info ">
        مراجعة اغلاق الحساب
    </h3>


    @if (Model.State == 1)
    {

        <div class="row">
            <div class="col-lg-4  p-2">
                <label> المبلغ المطلوب  </label>
                <label class=" text-bold-300 text-center"> @Model.Item.required_amount </label>
            </div>
            <div class="col-lg-4  p-2">
                <label> المبلغ المدفوع  </label>
                <label class="  text-bold-300 text-center"> @Model.Item.actual_amount </label>
            </div>
            <div class="col-lg-4  p-2">
                <label>العجز  </label>
                <label class="text-danger text-bold-300 text-center"> @Model.Item.moneyfall </label>
            </div>


        </div>

        <div class="row">
            <div class="col-lg-4  p-2">
                <label> عدد اوراق اجل المطلوب  </label>
                <label class=" text-bold-300 text-center"> @Model.Item.colection_paper_count_required </label>
            </div>
            <div class="col-lg-4  p-2">
                <label> عدد اوراق اجل   </label>
                <label class="  text-bold-300 text-center"> @Model.Item.Actual_DeferredMoneyPaper_count </label>
            </div>
            <div class="col-lg-4  p-2">
                <label>العجز  </label>
                <label class="text-danger text-bold-300 text-center"> @Model.Item.collectionpapercountfall </label>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4  p-2">
                <label> قيمة اوراق اجل المطلوب  </label>
                <label class=" text-bold-300 text-center"> @Model.Item.colection_paper_amount </label>
            </div>
            <div class="col-lg-4  p-2">
                <label> قيمة اوراق اجل   </label>
                <label class="  text-bold-300 text-center"> @Model.Item.Actual_DeferredMoneyPaper_Amount </label>
            </div>
            <div class="col-lg-4  p-2">
                <label>العجز  </label>
                <label class="text-danger text-bold-300 text-center"> @Model.Item.collectionpaperamountfall </label>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-4  p-2">
                <label> عدد اوراق دفع المطلوب  </label>
                <label class=" text-bold-300 text-center"> @Model.Item.payment_paper_count_required </label>
            </div>
            <div class="col-lg-4  p-2">
                <label> عدد اوراق دفع   </label>
                <label class="  text-bold-300 text-center"> @Model.Item.Actual_MoneyReceiptPapers_count </label>
            </div>
            <div class="col-lg-4  p-2">
                <label>العجز  </label>
                <label class="text-danger text-bold-300 text-center"> @Model.Item.moneypapercountfall </label>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4  p-2">
                <label> قيمة اوراق دفع المطلوب  </label>
                <label class=" text-bold-300 text-center"> @Model.Item.payment_paper_amount </label>
            </div>
            <div class="col-lg-4  p-2">
                <label> قيمة اوراق دفع   </label>
                <label class="  text-bold-300 text-center"> @Model.Item.Actual_MoneyReceiptPapers_Amount </label>
            </div>
            <div class="col-lg-4  p-2">
                <label>العجز  </label>
                <label class="text-danger text-bold-300 text-center"> @Model.Item.moneypaperamountfall </label>
            </div>
        </div>
        <div class="row">
            <div class="col-12 p-3">
                <button class="btn btn-primary w-100 text-center" onclick="sure('هل انت متاكد من قبول كشف الحساب واغلاق اليومية ؟' , 'قبول' , 'salesmanacceptclosingsettlement()')"> قبول كشف الحساب واغلاق اليومية </button>
            </div>
        </div>
    }
    else
    {
        <p class="text-center text-muted">
            @Model.Message
        </p>
    }
</div>
