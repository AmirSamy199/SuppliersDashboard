    $("#rangeid").change(() => {
        Loadgrid();
    })
    $("#comid").change(() => {
        Loadgrid();
    })
    $("#companytypeid").change(() => {
        Loadgrid();
    })

    function Loadgrid() {
        debugger
        let regionId = $("#rangeid").val() // range not region
        if (regionId == "")
            regionId = 0
        let comid = $("#comid").val()
        if (comid == "")
            comid = 0
        let typeid = $("#companytypeid").val()
        startloader()
        setTimeout(() => { endloader() }, 3000)
        $.ajax({
            url: "/Branch/GetBranchesDetailsJson",
            type: "post",
            data: {
                ComID: comid,
                RegionID: regionId,
                TypeID: typeid
            }, success: (res) => {
                let counter = 1;

                endloader()
                // $("#gridmsg").collapse("hide")
                $("#head").text(res.data.Message)
                let html = '';
                if (res.data.Data.length > 0) {
                    $.each(res.data.Data, (i, e) => {
                        html += `
                                <tr>
                                <td>${counter++}</td>
                                <td>${e.BranchName}</td>
                                <td>${e.CompanyName}</td>
                                <td>${e.TypeName}</td>
                                <td>${e.ContactName}</td>
                                <td>${e.UserName}</td>
                                <td  class="ignore">${e.CompanyName}</td>
                                <td  class="ignore">${e.Region}</td>
                                <td  class="ignore">${e.Telephone1}</td>
                                <td  class="ignore">${e.Telephone2}</td>
                                </tr>


                                `
                        $("#tbody").html(html)
                        $("#grid").collapse("show")
                        $("#grid2").collapse("show")
                        $("#gridmsg").addClass("d-none")

                    })
                } else {
                    $("#grid").collapse("hide")
                    $("#grid2").collapse("hide")
                    $("#gridmsg").text("لا يوجد فروع بهذة البانات ").removeClass("d-none")
                }

            }

        })


    }
</script>
