@model SuppliersDashboard.Models.HandHeldSalesDailyTrackerHead
@using SuppliersDashboard.Resources
@{
    ViewBag.Title = "HomeDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <!-- chart caard section start -->
    <div class="col-sm-6  col-lg-6">
        <div class="main-tiles border-5 border-0  card-hover card o-hidden">
            <div class="custome-1-bg b-r-4 card-body">
                <div class="media align-items-center static-top-widget">
                    <div class="media-body p-0">
                        <span class="m-0">
                            @llayout.AllSalesCount
                        </span>
                        <h4 class="mb-0 counter">
                            @Model.AllSalesCount
                            <span class="badge badge-light-primary grow">
                                <i data-feather="trending-up"></i>8.5%
                            </span>
                        </h4>
                    </div>
                    <div class="align-self-center text-center">
                        <i class="ri-database-2-line"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6  col-lg-6">
        <div class="main-tiles border-5 card-hover border-0 card o-hidden">
            <div class="custome-2-bg b-r-4 card-body">
                <div class="media static-top-widget">
                    <div class="media-body p-0">
                        <span class="m-0">
                            @llayout.SalesCountHasBill
                        </span>
                        <h4 class="mb-0 counter">
                            @Model.SalesCountHasBill
                            <span class="badge badge-light-danger grow">
                                <i data-feather="trending-down"></i>8.5%
                            </span>
                        </h4>
                    </div>
                    <div class="align-self-center text-center">
                        <i class="ri-shopping-bag-3-line"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6  col-lg-6">
        <div class="main-tiles border-5 card-hover border-0  card o-hidden">
            <div class="custome-3-bg b-r-4 card-body">
                <div class="media static-top-widget">
                    <div class="media-body p-0">
                        <span class="m-0">
                            @llayout.SalesCountHasItem
                        </span>
                        <h4 class="mb-0 counter">
                            @Model.SalesCountHasItem
                            <a href="add-new-product.html" class="badge badge-light-secondary grow">
                                ADD NEW
                            </a>
                        </h4>
                    </div>

                    <div class="align-self-center text-center">
                        <i class="ri-chat-3-line"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6  col-lg-6">
        <div class="main-tiles border-5 card-hover border-0 card o-hidden">
            <div class="custome-4-bg b-r-4 card-body">
                <div class="media static-top-widget">
                    <div class="media-body p-0">
                        <span class="m-0">
                            @llayout.FirstBillManName
                        </span>
                        <h4 class="mb-0 counter">
                            @Model.FirstBillManName
                            <span class="badge badge-light-success grow">
                                <i data-feather="trending-down"></i>8.5%
                            </span>
                        </h4>
                    </div>

                    <div class="align-self-center text-center">
                        <i class="ri-user-add-line"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6  col-lg-12">
        <div class="main-tiles border-5 border-0  card-hover card o-hidden">
            <div class="custome-1-bg b-r-4 card-body">
                <div class="media align-items-center static-top-widget">
                    <div class="media-body p-0">

                        <h4 class="mb-0 counter">
                            @llayout.Visitors
                        </h4>
                    </div>
                </div>
            </div>
            <div id="container" style="width: 100%; height: 100%;"></div>
            <script>
                        anychart.onDocumentReady(function () {

                            // set the data
                               var data = [];

                                @foreach (var item in Model.SalesData)
                                {

                                        <text>
                                            data.push({ x: '@item.Name', value: @item.BranchCount });
                                        </text>
                                }
                            console.log(data);                   // create the chart
                            var chart = anychart.pie();

                            // set the chart title

                            // add the data
                            chart.data(data);

                            // display the chart in the container
                            chart.container('container');
                            chart.draw();

                        });
            </script>
        </div>
    </div>
</div>
