            <div class="square" style="--i:4;"></div>
            <div class="square" style="--i:5;"></div>

            <div class="container" style="WIDTH: max-content; margin-top:2PX">
                <div class="form">
                    <div class="text-center">
                        <img src="~/Content/img/UNO.png">
                    </div>

                    <form action="/Account/LogIn" method="post">
                        <div class="inputBx">
                            <input type="text" name="phone" id="floatingText" required="required">
                            <span>@SuppliersDashboard.Resources.llayout.loginusername</span>

                        </div>
                        <div class="inputBx password">
