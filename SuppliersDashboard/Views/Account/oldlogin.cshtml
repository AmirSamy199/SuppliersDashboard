                            <span>@SuppliersDashboard.Resources.llayout.password</span>
                            <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>

                        </div>
                        <label class="remember">
                            <input type="checkbox">
                            Remember
                        </label>
                        <div class="inputBx">
                            <input type="submit" value="Log in">
                        </div>
                    </form>

