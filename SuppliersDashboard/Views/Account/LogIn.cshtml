<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <title>@title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <!-- Fonts & Icons -->
    <!-- Preconnect to external fonts providers -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- Import Google Fonts (Cairo) -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- Tailwind CSS -->
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"> *@
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@latest/dist/tailwind.min.css" rel="stylesheet">

    <!-- Tailwind config if needed -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Your HTML content here -->
    <!-- Alpine.js -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: 'Cairo', sans-serif !important;
            background-color: #222;
            color: #f1f1f1;
        }

        .form-control,
        .form-control:focus {
            background-color: #222;
            color: #f1f1f1;
            border-color: #444;
        }

        .fade-in {
            opacity: 0;
            animation: fadeIn 0.8s ease-in-out forwards;
        }

        .fade-out {
            animation: fadeOut 1s ease-in-out forwards;
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        .alert {
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        .alert-danger {
            color: #a94442;
            background-color: #f2dede;
            border-color: #ebccd1;
        }
    </style>
</head>

<body class="h-screen flex flex-col text-gray-200">
    <!-- Header -->
    <header class="sticky top-0 left-0 w-full h-24 flex flex-col items-center justify-center gap-0 z-50" dir="ltr">
        <img id="header-logo" src="~/Content/img/unologo.png" alt="Logo" class="h-12" />
        <span class="text-gray-500 text-xl font-bold tracking-wide">UNOPOS CENTER</span>
    </header>

    <!-- Login form -->
    <div class="flex items-center justify-center px-4 fade-in" style="margin-top: 0px; height: calc(100vh - 200px);">
        <div class="w-full max-w-sm sm:max-w-md lg:max-w-lg rounded-lg overflow-hidden p-8 sm:p-12" @(lang == "ar" ? "dir=rtl" : "")>
            <h2 class="text-center font-bold text-3xl mb-6 text-blue-600 transition duration-300 ease-in-out">
                @(lang == "ar" ? "مرحباً بك" : "WELCOME")
            </h2>

            <!-- Submit -->
            <form asp-controller="Account" asp-action="LogIn" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <h4 class="text-white" style="text-align: center">@ViewBag.Message</h4>
                <div>
                    <label class="block text-gray-100 text-l" for="username">
                        @(lang == "ar" ? "اسم المستخدم" : "Username")
                    </label>
                    <input type="text" id="username" name="phone" required autofocus
                           placeholder="@(lang == "ar" ? "أدخل اسم المستخدم" : "Enter your username")"
                           class="w-full mt-1 px-4 py-2 text-l bg-gray-900 text-gray-100 border border-gray-100 rounded-lg focus:outline-none focus:bg-blue-800">
                </div>
                <div>
                    <label class="block text-gray-100 text-l" for="password">
                        @(lang == "ar" ? "كلمة المرور" : "Password")
                    </label>
                    <input type="password" id="password" name="password" required autocomplete="on"
                           placeholder="@(lang == "ar" ? "أدخل كلمة المرور" : "Enter your password")"
                           class="w-full mt-1 px-4 py-2 text-l bg-gray-900 text-gray-100 border border-gray-100 rounded-lg focus:outline-none focus:bg-blue-800">
                </div>
                <button type="submit" id="loginBtn"
                        class="w-full flex items-center justify-center gap-2 bg-blue-600 text-l text-white py-2 rounded-lg hover:bg-blue-800 transition duration-200">
                    <!-- Spinner hidden by default -->
                    <svg id="spinner" class="animate-spin h-5 w-5 text-white hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
                    </svg>
                    <span id="btnText">@(lang == "ar" ? "تسجيل الدخول" : "Login")</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Error Message -->
    @if (TempData["Error"] != null)
    {
        <div class="fixed bottom-15 text-xl left-0 alert alert-danger w-full flex items-center justify-center">
            @TempData["Error"]
        </div>
    }

    <!-- Footer -->
    <div class="fixed bottom-0 left-0 w-full text-white text-center py-3 text-sm flex justify-between items-center px-4" dir="ltr">
        <span>©2025 UNOPOS™ SOLUTIONS</span>
        <button id="toggleLang"
                class="px-4 py-1 text-sm border rounded bg-orange-600 text-white hover:bg-orange-800 transition duration-200 ">
            @(lang == "ar" ? "ENG" : "عربي")
        </button>
    </div>

    <script>

        document.getElementById("toggleLang").addEventListener("click", function () {
            const currentLang = document.documentElement.lang || 'en';
            const newLang = currentLang === 'ar' ? 'en' : 'ar';
            // change lang in cookies
            document.cookie = `UserLang=${newLang}; path=/; max-age=31536000`;

            // update html lang
            document.documentElement.setAttribute("lang", newLang);
            document.body.classList.add('fade-out');
            setTimeout(() => location.reload(), 300);
        });

        window.onload = function () {
            document.body.style.display = "block";
            document.getElementById("username").focus();
        };

        // submit
        document.querySelector("form").addEventListener("submit", function () {
            // Display Spinner
            document.getElementById("spinner").classList.remove("hidden");
            btnText.textContent = document.documentElement.lang === "ar" ? "جاري تسجيل الدخول ..." : "Logging in ...";
            document.getElementById("loginBtn").disabled = true;
            document.getElementById("loginBtn").classList.add("opacity-70", "cursor-not-allowed");
        });
    </script>

</body>
</html>
}


